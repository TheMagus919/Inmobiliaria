@model List<proyecto.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h1>Pagos</h1>
<div class="opcionesContenedor">
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Pago</a>
    </p>
    <p>
        <a asp-action="FormContrato" class="btn btn-primary">Listar todos los Pagos de un Contrato</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <h3>Id</h3>
            </th>
            <th>
                <h3>Numero De Pago</h3>
            </th>
            <th>
                <h3>Direccion</h3>
            </th>
            <th>
                <h3>Opciones</h3>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDePago)
            </td>
            <td>
                @(item.contrato.Lugar.Direccion)
            </td>
            @if(User.IsInRole("administrador")){
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.IdPago }) |
                    @Html.ActionLink("Detalles", "Details", new {  id=item.IdPago }) |
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.IdPago })
                </td>
            }else{
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.IdPago }) |
                    @Html.ActionLink("Detalles", "Details", new {  id=item.IdPago })
                </td>
            }
            
        </tr>
}
    </tbody>
</table>
