@model proyecto.Models.Pago

@{
    ViewData["Title"] = "Detalles Pago";
}

<h1>Detalles del Pago</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPago)
        </dd>
        <dt class = "col-sm-2">
            Numero de Pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroDePago)
        </dd>
        <dt class = "col-sm-2">
            Fecha De Pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaDePago)
        </dd>
        <dt class = "col-sm-2">
            Direccion
        </dt>
        <dd class = "col-sm-10">
            @(Model.contrato.Lugar.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>
</div>
<div class="form-group">
    <form action='/Pagos/Edit/@Model.IdPago'>
        <button type="submit" class="btn btn-primary">Editar</button> |
        <button class="btn btn-secondary" asp-action="Index">Volver atras</button>
    </form>
</div>
