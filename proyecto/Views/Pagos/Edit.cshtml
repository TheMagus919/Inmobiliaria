@model proyecto.Models.Pago

@{
    ViewData["Title"] = "Edit";

}

<h1>Editar Pago</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPago" class="control-label"> Id Pago</label>
                <input asp-for="IdPago" class="form-control" readonly/>
                <span asp-validation-for="IdPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDePago" class="control-label">Numero de Pago</label>
                <input asp-for="NumeroDePago" class="form-control" />
                <span asp-validation-for="NumeroDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDePago" class="control-label">Fecha de Pago</label>
                <input asp-for="FechaDePago" class="form-control" />
                <span asp-validation-for="FechaDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label">Contrato a Nombre de</label>
                <select class="form-select" name="IdContrato">
                    @foreach (var item in ViewBag.Contratos){
                        @:<option @(item.IdContrato==Model.IdContrato ? "selected" : "") value="@item.IdContrato">@(item.ToString())</option>
                    }
                </select>
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" type="number" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <button class="btn btn-secondary" asp-action="Index">Volver atras</button>
            </div>
        </form>
    </div>
</div>

