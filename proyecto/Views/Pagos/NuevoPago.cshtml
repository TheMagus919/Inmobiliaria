@model proyecto.Models.Pago

@{
    ViewData["Title"] = "Crear Pago";
    var contrato = ViewBag.Contrato;
}

<h1>Crear Nuevo Pago para contrato ID:@contrato.IdContrato</h1>
@if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NuevoPago" asp-route-id="@contrato.IdContrato">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroDePago" class="control-label">Numero De Pago</label>
                <input asp-for="NumeroDePago" type="number" class="form-control" required/>
                <span asp-validation-for="NumeroDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDePago" class="control-label">Fecha De Pago</label>
                <input asp-for="FechaDePago" class="form-control" required/>
                <span asp-validation-for="FechaDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label">ID Contrato</label>
                <input asp-for="IdContrato" class="form-control" value="@contrato.IdContrato" readonly/>
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" type="number" class="form-control" required/>
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver al menu Pagos</a>
            </div>
        </form>
    </div>
</div>

