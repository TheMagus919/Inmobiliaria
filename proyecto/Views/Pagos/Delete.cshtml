@model proyecto.Models.Pago

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Pago</h1>

<h3>Estas seguro que quieres eliminarlo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id Pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPago)
        </dd>
        <dt class = "col-sm-2">
            Numero De Pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroDePago)
        </dd>
        <dt class = "col-sm-2">
            Fecha De Pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaDePago)
        </dd>
        <dt class = "col-sm-2">
            Contrato a Nombre de
        </dt>
        <dd class = "col-sm-10">
            @(Model.contrato.Vive.Nombre + " " + Model.contrato.Vive.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <button class="btn btn-secondary" asp-action="Index">Volver atras</button>
    </form>
</div>
