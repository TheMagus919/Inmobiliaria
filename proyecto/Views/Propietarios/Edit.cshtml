@model proyecto.Models.Propietario

@{
    ViewData["Title"] = "Editar Propietario";
}

<h3 style="text-align: center;">EDITAR PROPIETARIO NÂ°: @ViewBag.IdPropi</h3>
@if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
<hr />
<div class="contenedorFormulario">
    <form asp-action="Edit">
        <div class="row">
            <div class="col" style="margin-top: 10px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">NOMBRE:</label>
                    <input asp-for="Nombre" class="form-control" required/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="IdPropietario" class="control-label"></label>
                    <input asp-for="IdPropietario" class="form-control"/>
                    <span asp-validation-for="IdPropietario" class="text-danger"></span>
                </div>
            </div>
            <div class="col" style="margin-top: 10px;">
                <div class="form-group">
                    <label asp-for="Apellido" class="control-label">APELLIDO:</label>
                    <input asp-for="Apellido" class="form-control" required/>
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col" style="margin-top: 10px;">
                <div class="form-group">
                    <label asp-for="Dni" class="control-label">DNI:</label>
                    <input asp-for="Dni" type="number" class="form-control" required/>
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
            </div>
            <div class="col" style="margin-top: 10px;">
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label">TELEFONO:</label>
                    <input asp-for="Telefono" type="number" class="form-control" required/>
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col" style="margin-top: 10px;">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">CORREO ELECTRONICO:</label>
                    <input asp-for="Email" type="email" class="form-control" required/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col" style="margin-top: 35px;">
                <div class="form-group" style="float: right; width: max-content;">
                    <input type="submit" value="Guardar" class="btn btn-primary" /> |
                    <a class="btn btn-secondary" asp-action="Index">Volver atras</a>
                </div>
            </div>
        </div>
    </form>
</div>
