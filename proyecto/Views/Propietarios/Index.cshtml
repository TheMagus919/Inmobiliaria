@model List<proyecto.Models.Propietario> 
@{
    ViewData["Title"] = "Propietarios";
}

<h2 >LISTADO DE PROPIETARIOS</h2>
<hr />
<p><a asp-action="Create" class="btn btn-primary" >Crear Nuevo Propietario</a></p>
<table class="table" id="tabla">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>APELLIDO</th>
            <th>DNI</th>
            <th>OPCIONES</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.IdPropietario)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
            <td>@Html.DisplayFor(modelItem => item.Dni)</td>
            @if(User.IsInRole("administrador")){
                <td>
                    <a href="@Url.Action("Edit", new { id=item.IdPropietario  })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Details", new { id=item.IdPropietario  })" class="btn btn-secondary">Detalles</a>
                    <a href="@Url.Action("Delete", new { id=item.IdPropietario  })" class="btn btn-danger">Eliminar</a>
                </td>
            }else{
                <td>
                    <a href="@Url.Action("Edit", new { id=item.IdPropietario })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Details", new { id=item.IdPropietario })" class="btn btn-secondary">Detalles</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>
