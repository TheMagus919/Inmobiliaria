@model proyecto.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h1>Editar Usuario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Id</label>
                <input asp-for="IdUsuario" class="form-control" readonly/>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" required/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" required/>
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Para cambiar la Contraseña</label>
                @Html.ActionLink("Cambiar Contraseña", "CambiarPassword", new { id= Model.IdUsuario })
            </div>
            <div class="form-group">
                <img src="@(ViewBag.Avatar)" alt="..." height="200px" width="200px">
            </div>
            <div class="form-group">
                <label class="control-label">Para cambiar el Avatar</label>
                @Html.ActionLink("Cambiar Avatar", "CambiarFoto", new { id= Model.IdUsuario })
            </div>
            <div class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <input asp-for="Rol" class="form-control" readonly/>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                @if(User.IsInRole("administrador")){
                    <button class="btn btn-secondary" asp-action="Index">Volver atras</button>
                }else{
                    <button class="btn btn-secondary"><a href="https://localhost:7183/" style="text-decoration: none; color:white;">Volver atras</a></button>
                }
            </div>
        </form>
    </div>
</div>

