@model proyecto.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h3 style="text-align: center;">EDITAR USUARIO N°: @ViewBag.IdUs</h3>
<hr />
<div class="contenedorFormulario">
    <form asp-action="Edit">
        <div class="row">
            <div class="col" style="margin-top: 10px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">NOMBRE:</label>
                    <input asp-for="Nombre" class="form-control" required/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="AvatarFile" class="control-label"></label>
                    <input type="file" name="AvatarFile"/>
                    <span asp-validation-for="AvatarFile" class="text-danger"></span>
                </div>
            </div>
            <div class="col" style="margin-top: 10px;">
                <div class="form-group">
                    <label asp-for="Apellido" class="control-label">APELLIDO:</label>
                    <input asp-for="Apellido" class="form-control" required/>
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col" style="margin-top: 10px;">
                <div class="form-group">
                    <label asp-for="Rol" class="control-label">ROL:</label>
                    <select asp-for="Rol" class="form-control" required>
                        <option value="administrador">Administrador</option>
                        <option value="empleado">Empleado</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>
            </div>
            <div class="col" style="margin-top: 34px;">
                <div class="form-group" style="width: max-content;">
                     <a href="@Url.Action("CambiarPassword", new { id= Model.IdUsuario })" class="btn btn-info">Cambiar Contraseña</a>
                </div>
            </div>
            <div class="col" style="margin-top: 34px;">
                <div class="form-group" style="width: max-content;">
                    <a href="@Url.Action("CambiarFoto", new { id= Model.IdUsuario })" class="btn btn-info">Cambiar Avatar</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col" style="margin-top: 10px;">
                <div class="form-group" style="float: right;">
                    <input type="submit" value="Guardar" class="btn btn-primary" /> |
                    @{
                        string returnUrl = (string)ViewBag.ReturnUrl ?? "Index";
                    }
                    @if(User.IsInRole("administrador")){
                        <a href="@Url.Action(returnUrl, "Usuarios")" class="btn btn-secondary">Volver atrás</a>
                    }else{
                        <button class="btn btn-secondary"><a href="https://localhost:7183/" style="text-decoration: none; color:white;">Volver atras</a></button>
                    }
                </div>
            </div>
        </div>
    </form>
</div>