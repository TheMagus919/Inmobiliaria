@model proyecto.Models.Contrato

@{
    ViewData["Title"] = "Contratos";
}

<h3 style="text-align: center;">SELECCIONAR LAS FECHAS</h3>
@if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
<hr />
<div class="contenedorFormulario">
    <form asp-action="ListarInmueblesDisponibles">
        <div class="row">
            <div class="col" style="margin-top: 10px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FechaDesde" class="control-label">FECHA DESDE:</label>
                    <input asp-for="FechaDesde" class="form-control"/>
                    <span asp-validation-for="FechaDesde" class="text-danger"></span>
                </div>
            </div>
            <div class="col" style="margin-top: 10px;">
                <div class="form-group">
                    <label asp-for="FechaHasta" class="control-label">FECHA HASTA:</label>
                    <input asp-for="FechaHasta" class="form-control"/>
                    <span asp-validation-for="FechaHasta" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col" style="margin-top: 10px;">
                <div class="form-group" style="float: right;">
                    <input type="submit" value="Seleccionar" class="btn btn-primary" /> |
                    <button class="btn btn-secondary" asp-action="Index">Volver atras</button>
                </div>
            </div>
        </div>
    </form>
</div>