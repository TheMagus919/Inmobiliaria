@model proyecto.Models.Contrato

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del Contrato</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id Contrato
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdContrato)
        </dd>
        <dt class = "col-sm-2">
            Nombre del Propietario del Inmueble
        </dt>
        <dd class = "col-sm-10">
            @(Model.Lugar.Duenio.Nombre + " " + Model.Lugar.Duenio.Apellido)
        </dd>
        <dt class = "col-sm-2">
            <p>Nombre del Inquilino</p>
        </dt>
        <dd class = "col-sm-10">
            @(Model.Vive.Nombre + " " + Model.Vive.Apellido)
        </dd>
        <dt class = "col-sm-2">
            Fecha Desde
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaDesde)
        </dd>
        <dt class = "col-sm-2">
            Fecha Hasta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaHasta)
        </dd>
    </dl>
</div>
<div class="form-group">
    <form action='/Contratos/Edit/@Model.IdContrato'>
        <button type="submit" class="btn btn-primary">Editar</button> |
        <button class="btn btn-secondary" asp-action="Index">Volver atras</button>
    </form>
</div>
