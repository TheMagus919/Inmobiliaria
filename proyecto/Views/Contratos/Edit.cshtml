@model proyecto.Models.Contrato

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <input asp-for="IdContrato" class="form-control" readonly/>
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdInmueble" class="control-label">Inmueble</label>
                <select class="form-control" name="IdInmueble">
                    @foreach(var item in ViewBag.Inmuebles){
                        @:<option @(item.IdInmueble==Model.IdInmueble ? "selected" : "") value="@item.IdInmueble">@(item.ToString())</option>
                    }
                </select>
                <span asp-validation-for="IdInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Inquilino</label>
                <select class="form-control" name="IdInquilino">
                    @foreach (var item in ViewBag.Inquilinos){
                        @:<option @(item.IdInquilino==Model.IdInquilino ? "selected" : "") value="@item.IdInquilino">@(item.ToString())</option>
                    }
                </select>
                <span asp-validation-for="IdInquilino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDesde" class="control-label"></label>
                <input asp-for="FechaDesde" class="form-control" />
                <span asp-validation-for="FechaDesde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaHasta" class="control-label"></label>
                <input asp-for="FechaHasta" class="form-control" />
                <span asp-validation-for="FechaHasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atras.</a>
</div>

