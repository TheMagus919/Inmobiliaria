@model List<proyecto.Models.Contrato> 

@{
    ViewData["Title"] = "Contratos Vigentes";
}

<h1>Listado de Contratos Vigentes:</h1>

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver atras</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <h3>Id</h3>
            </th>
            <th>
                <h3>Direccion</h3>
            </th>
            <th>
                <h3>Inquilino</h3>
            </th>
            <th>
                <h3>Fecha Inicio</h3>
            </th>
            <th>
                <h3>Fecha Fin</h3>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdContrato)
            </td>
            <td>
                @(item.Lugar.Direccion)           
            </td>                    
            <td>
                @(item.Vive.Nombre + " " + item.Vive.Apellido) 
            </td>
            <td>
                @(item.FechaDesde.Value.ToShortDateString()) 
            </td>
            <td>
                @(item.FechaHasta.Value.ToShortDateString()) 
            </td>
        </tr>
        }
    </tbody>
</table>
