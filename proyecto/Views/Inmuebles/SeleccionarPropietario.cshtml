@model proyecto.Models.Propietario
@{
    ViewData["Title"] = "Inmueble";
    var listPropietarios = (List<Propietario>)ViewBag.Propietarios;
}

<h4 style="text-align: center;">SELECCIONAR UN PROPIETARIO PARA MOSTRAR EL LISTADO DE SUS INMUEBLES</h4>
@if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
<hr />
<div class="row" style="width: 60%; margin: 0 auto; display: flex; justify-content: center; align-items: center; ">
    <div class="col-6">
        <form asp-action="InmueblexPropietario" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPropietario" class="control-label">PROPIETARIO:</label>
                <select class="form-select" name="IdPropietario" required>
                    @foreach(var pro in listPropietarios){
                        <option value="@pro.IdPropietario">@(pro.ToString())</option>
                    }
                </select>
                <span asp-validation-for="IdPropietario" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group" style="width: max-content; float: right;">
                <input type="submit" value="Seleccionar" class="btn btn-primary" /> |
                <button class="btn btn-secondary" asp-action="Index">Volver atras</button>
            </div>
        </form>
    </div>
</div>
</div>

